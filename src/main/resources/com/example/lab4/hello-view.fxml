<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab4.HelloController">
    <children>
        <TextField fx:id="inputField" promptText="Enter name" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font size="14.0" />
         </font></TextField>
        <Button onAction="#handleAddButtonAction" text="Add" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="50.0">
         <font>
            <Font size="14.0" />
         </font></Button>
        <Button onAction="#handleDeleteButtonAction" text="Delete" AnchorPane.leftAnchor="70.0" AnchorPane.topAnchor="50.0">
         <font>
            <Font size="14.0" />
         </font></Button>
        <ListView fx:id="listView" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="90.0" />
    </children>
</AnchorPane>
